<Page x:Class="ElectronicMagazine.AdminPanel.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicMagazine.AdminPanel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Студенты" HorizontalAlignment="Center" VerticalAlignment="Center" Height="46" Width="115" Click="edtStud"/>
        <Button Content="Учителя" HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Row="1" Height="46" Width="115" Click="editTeacher"/>
        <Button Content="Пользователи" HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Row="2" Height="46" Width="115" Click="editUser"/>
        <Button Content="Роли" HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Row="3" Height="46" Width="115" Click="editRole"/>
    </Grid>
</Page>
